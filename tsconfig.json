{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "noImplicitAny": true,
        "removeComments": true,
        "declaration": true,
        "allowJs": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "types": [
            "node",
            "jest"
        ],
        "isolatedModules": false,
        "rootDirs": [
            "src"
        ],
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}
